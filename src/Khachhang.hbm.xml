<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="entity.Khachhang" table="khachhang" catalog="quanlysach">
        <id name="maKhachHang" type="string">
            <column name="MaKhachHang" length="50"/>
            <generator class="assigned"/>
        </id>
        <!-- property, id la ten thuoc tinh lay ra, column la ten cot duoc lay -->
        <property name="matKhau" type="string">
            <column name="MatKhau" length="50"/>
        </property>
        <property name="hoVaTen" type="string">
            <column name="hoVaTen" length="50" />
        </property>
        <property name="email" type="string">
            <column name="Email" length="50" />
        </property>
        <property name="dienThoai" type="string">
            <column name="DienThoai" length="50" />
        </property>
    </class>
</hibernate-mapping>